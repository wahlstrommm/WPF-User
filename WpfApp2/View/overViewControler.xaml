<UserControl x:Class="WpfApp2.View.overViewControler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>


        <Label  Content="{Binding Path=heading}" FontSize="30" VerticalAlignment="Top" ></Label>
        <Label Content="{Binding Path=summary}" FontSize="30" VerticalAlignment="Center"  HorizontalAlignment="Right" Margin="30"></Label>
        <Label Content="{Binding Path=date}" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Label>

    </Grid>
</UserControl>
